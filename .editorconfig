
# EditorConfig is awesome: http://EditorConfig.org

# Top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{py,cfg,yml,yaml}]
charset = utf-8
indent_style = space

[Makefile]
indent_style = tab

[*.{py,cfg}]
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2
